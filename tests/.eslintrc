{
  "extends" : "../.eslintrc",
  "env"     : {
    "mocha" : true
  },
  "globals" : {
    "expect" : false,
    "should" : false,
    "sinon"  : false
  },
  /**
 * "off" 或 0 - 关闭规则
 * "warn" 或 1 - 开启规则，使用警告级别的错误：warn (不会导致程序退出),
 * "error" 或 2 - 开启规则，使用错误级别的错误：error (当被触发的时候，程序会退出)
 */
  "rules": {
    // 关闭规则，允许使用的包不放在dependencies中
    "import/no-extraneous-dependencies": 0,

    // 关闭规则，允许许使用纯表达式
    "no-unused-expressions": 0,

    // 关闭规则，允许import时不指明扩展名
    "import/extensions": 0,

    // 关闭规则，允许import中存在不能解析标识符
    "import/no-unresolved": 0,

    // 关闭规则，允许使用for-of
    "no-restricted-syntax": 0
  }
}
